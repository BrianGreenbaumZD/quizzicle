<div class="question">

  <p id="question_text">{{question}}</p>

  <div id="option_group">
    {{#each choices}}
      <label class="radio">
        <input type="radio" name="question_options" id="option_{{id}}" value="{{id}}" />
        {{description}}
      </label>
    {{/each}}
  </div>

  <button class='submit_answer btn-info' disabled="true">Submit Answer</button>
  <span id="question_counter">Question <strong>{{current_question_num}}</strong> / {{num_of_questions}}</span>
</div>
